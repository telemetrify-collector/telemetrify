<?xml version="1.0" encoding="utf-8"?>
<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>de-bsp-berlin-cpe-1</name>
      <telemetrify xmlns="urn:telekom:abs:telemetrify">
        <subscription>
          <name>sub1</name>
          <source>
            <netconf-get-poll>
              <path>ip-sla-ios-xe-oper:ip-sla-stats</path>
              <period>5000</period>
            </netconf-get-poll>
          </source>
          <sink>
            <name>cdb</name>
            <transform>
              <name>cat8k-ip-sla</name>
            </transform>
          </sink>
          <!-- <sink>
            <name>m3db</name>
          </sink> -->
        </subscription>
        <sources>
          <netconf>
            <address>cat1-mock</address>
            <port>443</port>
            <username>vrnetlab</username>
            <password>VR-netlab9</password>
          </netconf>
        </sources>
      </telemetrify>
    </device>
  </devices>
  <telemetrify xmlns="urn:telekom:abs:telemetrify">
    <sink>
      <name>cdb</name>
      <nso-cdb>
      </nso-cdb>
    </sink>
    <sink>
      <name>m3db</name>
      <m3db>
        <address>m3db</address>
        <port>7201</port>
      </m3db>
    </sink>
    <logging>
      <level>debug</level>
    </logging>
  </telemetrify>
</config>

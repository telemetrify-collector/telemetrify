<devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>cat1</name>
    <config>
      <hostname xmlns="urn:ios">cat1</hostname>
      <interface xmlns="urn:ios">
        <GigabitEthernet>
          <name>2</name>
          <ip>
            <address>
              <primary>
                <address>10.1.0.1</address>
                <mask>255.255.255.252</mask>
              </primary>
            </address>
          </ip>
        </GigabitEthernet>
      </interface>
      <ip xmlns="urn:ios">
        <sla>
          <responder-enable>
            <responder/>
          </responder-enable>
          <responder-udp-echo>
            <responder>
              <udp-echo>
                <ipaddress>10.1.0.1</ipaddress>
                <port>12345</port>
              </udp-echo>
            </responder>
          </responder-udp-echo>
          <ip-sla-list>
            <id>10</id>
            <udp-jitter>
              <destination>10.1.0.2</destination>
              <destination-port>12345</destination-port>
              <control>disable</control>
            </udp-jitter>
            <frequency>
              <seconds>2</seconds>
            </frequency>
            <threshold>500</threshold>
            <timeout>1000</timeout>
          </ip-sla-list>
          <schedule>
            <operation-number>10</operation-number>
            <life>forever</life>
            <start-time>
              <now/>
            </start-time>
          </schedule>
        </sla>
      </ip>
    </config>
  </device>

actor Client(auth: net.TCPConnectAuth, address: str, port: int, on_connect: action(Client) -> None, on_error: action(Client, str) -> None):
    """HTTP Client
    """
    var _on_response: list[(bytes, action(Client, Response) -> None)] = []
    var version: ?bytes = None
    var buf = b""
    var close_connection: bool = True

    def connect():
        conn = net.TCPIPConnection(auth, address, port, on_tcp_connect, on_tcp_receive, on_tcp_error)

    def on_tcp_connect(conn: net.TCPIPConnection) -> None:
        # If there are outstanding requests, it probably means we were
        for r in _on_response:
            conn.write(r.0)
        await async on_connect(self)

    def on_tcp_receive(conn: net.TCPIPConnection, data: bytes) -> None:
        buf += data

        while True:
            r, buf = parse_response(buf)
            if r is not None:
                if "connection" in r.headers and r.headers["connection"] == "close":
                    close_connection = True
                    # TODO TCPIPConnection to implement close()
                    #conn.close()
                    print("Closing TCP connection due to header: Connection: close")
                    connect()
                if len(_on_response) == 0:
                    raise ValueError("No on_response callback set")
                outreq = _on_response[0]
                del _on_response[0]
                cb = outreq.1

                await async cb(self, r)

            else:
                break

    def on_tcp_error(conn: net.TCPIPConnection, error: str) -> None:
        print("There was an error:", error, " from:", conn)

    var conn: net.TCPIPConnection = net.TCPIPConnection(auth, address, port, on_tcp_connect, on_tcp_receive, on_tcp_error)

    def get(path: str, on_response: action(Client, Response) -> None):
        req = build_request(address, b"GET", path.encode(), b"1.1", {}, b"")
        _on_response.append((req, on_response))
        conn.write(req)
